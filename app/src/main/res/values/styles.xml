<resources>
    <declare-styleable name="refreshableView">
        <attr name="interceptAllMoveEvents" format="boolean" />
    </declare-styleable>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
    </style>
    <style name="Theme.FloatActivity" parent="android:style/Theme.Dialog">
        <!-- float_box为我们定义的窗口背景 ，这个不是必须的-->
        <item name="android:windowBackground">@drawable/float_box</item>
    </style>
    <style name="AppBlankTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/default_splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="layout_buttoom_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/x70</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="mycheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/radiobutton_selector</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>
    <style name="wd_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x66</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="wd_text2_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15.0sp</item>
        <item name="android:gravity">clip_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="wd_linear_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="wd_zl_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>

    </style>
    <style name="wd_zhc_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textSelectHandle">@drawable/textselecthandle</item>
        <item name="android:textSelectHandleLeft">@drawable/textselecthandle</item>
        <item name="android:textSelectHandleRight">@drawable/textselecthandle</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_shape</item>
    </style>
    <style name="wd_zhc_text_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/color_balank</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="my_anim_out_in" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/myanim_in</item>
        <item name="android:windowExitAnimation">@anim/myanim_out</item>
    </style>

    <style name="my_theme_animation" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/my_anim_out_in</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--更新dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!--dialog无标题-->
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog"> 
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CalendarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/calendar_text_active</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarCell.DayHeader">
        <item name="android:textColor">@color/calendar_text_active</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CalendarCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textAlignment">center</item>-->
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/calendar_bg_selector</item>
        <item name="android:textColor">@color/calendar_text_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>
</resources>
