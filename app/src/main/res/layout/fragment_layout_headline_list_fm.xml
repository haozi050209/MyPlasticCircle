<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.myplas.q.common.view.XListView
            android:id="@+id/fragment_headline_list_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0px">
        </com.myplas.q.common.view.XListView>

        <LinearLayout
            android:id="@+id/layout_noresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:src="@drawable/zxtb"/>

            <TextView
                android:id="@+id/text_noresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="没有相关数据"
                android:textSize="16.0sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/img_reload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@drawable/img_reload"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/image_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:background="@null"
            android:src="@drawable/btn_backup"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>