<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_layout_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="品种"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <View
            android:layout_width="3px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_lightgray"></View>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="牌号"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <View
            android:layout_width="3px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_lightgray"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left"
            android:padding="5dp"
            android:text="   厂家"
            android:textSize="16.0sp"
            android:textStyle="bold" />

    </LinearLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="4px"-->
    <!--android:background="@color/color_litlegray"></View>-->
    <ListView
        android:id="@+id/physical_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:divider="@color/color_gray3"
        android:dividerHeight="1px"></ListView>
</LinearLayout>
