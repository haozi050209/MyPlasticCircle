<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipChildren="false"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView_myself"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="vertical">

            <include
                layout="@layout/fragment_titlebar_layout_logined"
                android:clipChildren="false"></include>

            <include layout="@layout/fragment_titlebar_layout_fans"></include>

            <include layout="@layout/fragment_titlebar_layout_list"></include>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/img_reload"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/img_reload"
        android:visibility="gone"/>
</LinearLayout>
