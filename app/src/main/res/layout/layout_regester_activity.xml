                        android:layout_height="50dp">
                        <TextView
                            style="@style/wd_zhc_text_style"
                            android:text="手机号码："/>
                        <EditText
                            android:id="@+id/zhc_tel"
                            android:inputType="number"
                            android:maxLength="11"
                            style="@style/wd_zhc_edit_style"
                            android:hint="请输入手机号码"></EditText>
                    </LinearLayout>

                    <View
