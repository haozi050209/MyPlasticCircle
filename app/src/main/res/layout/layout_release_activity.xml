<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ListView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:scrollbars="none"
            android:id="@+id/fb_qg_listview">
        </ListView>
        <View
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:background="@color/color_lightgray"></View>
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scrollbars="none"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/fb_gj_listview">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/fb_qg_img"
            android:text="发布求购"
            android:gravity="center"
            android:drawableTop="@drawable/btn_release_purchasing"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发布供给"
            android:gravity="center"
            android:id="@+id/fb_gj_img"
            android:drawableTop="@drawable/btn_release_supply"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#d0d2d2"></View>
    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/btn_skip3"
        android:background="@null"
        android:id="@+id/fb_back_imgbtn"
        android:layout_gravity="center"/>
</LinearLayout>
