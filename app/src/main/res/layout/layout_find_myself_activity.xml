<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_red">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:text="我的信用信息"
            android:textColor="@color/color_white"
            android:textSize="18.0sp"
            android:id="@+id/fx_zj_title"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/btn_back" />
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16.0sp"
        android:text="没有此公司或此公司还未被授信!"
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/tishi_text"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_myself"
        android:visibility="gone"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/financial_announcement"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#060606"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/c_name"
                android:layout_marginTop="5dp"
                android:textSize="20.0sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#060606"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/myself_content"
                android:layout_margin="10dp"
                android:textSize="14.0sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myself_content_next"
                android:layout_margin="10dp"
                android:textColor="@color/color_balank"
                android:gravity="center"
                android:textSize="12.0sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_myself"
                    android:src="@drawable/certificate"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="20dp"
                    android:textStyle="bold"
                    android:textSize="15.0sp"
                    android:textColor="#161717"
                    android:id="@+id/img_name"
                    android:gravity="center"
                    android:layout_marginTop="90dp"
                    android:layout_alignTop="@+id/img_myself"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/img_content"
                    android:textSize="11.0sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="118dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:gravity="center">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_share"
                    android:background="@null"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_share2"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_shm"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/explain"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
