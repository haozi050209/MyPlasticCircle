<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:huang="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearlayout_login_phone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/title_rs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="@color/color_balank"
            android:textSize="18.0sp"/>

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/btn_login_back"/>
        </LinearLayout>
    </FrameLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:textColorHint="@color/color_content"
        huang:counterOverflowTextAppearance="@style/counterOverflowTextColor"
        huang:hintEnabled="false">

        <com.myplas.q.common.view.MyEditText
            android:id="@+id/zhh_tel"
            style="@style/login_edittext"
            android:background="@null"
            android:drawableLeft="@drawable/icon_username"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:textCursorDrawable="@drawable/text_cursor_shape"
            android:textSelectHandle="@drawable/textselecthandle"
            android:textSelectHandleLeft="@drawable/textselecthandle"
            android:textSelectHandleRight="@drawable/textselecthandle"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_red"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:textColorHint="@color/color_content"
        huang:errorTextAppearance="@style/counterOverflowTextColor"
        huang:hintEnabled="false"
        huang:passwordToggleEnabled="false"
        huang:passwordToggleTint="@color/color_red"
        huang:passwordToggleTintMode="src_atop">

        <com.myplas.q.common.view.MyEditText
            android:id="@+id/zhh_pass"
            style="@style/login_edittext"
            android:background="@null"
            android:drawableLeft="@drawable/icon_number_code"
            android:hint="请输入新密码"
            android:textCursorDrawable="@drawable/text_cursor_shape"
            android:textSelectHandle="@drawable/textselecthandle"
            android:textSelectHandleLeft="@drawable/textselecthandle"
            android:textSelectHandleRight="@drawable/textselecthandle"/>

    </android.support.design.widget.TextInputLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColorHint="@color/color_content"
            huang:errorTextAppearance="@style/counterOverflowTextColor"
            huang:hintEnabled="false"
            huang:passwordToggleEnabled="false"
            huang:passwordToggleTint="@color/color_red"
            huang:passwordToggleTintMode="src_atop">

            <com.myplas.q.common.view.MyEditText
                android:id="@+id/zhh_yzm"
                style="@style/login_edittext"
                android:background="@null"
                android:drawableLeft="@drawable/icon_phone_code"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/text_cursor_shape"
                android:textSelectHandle="@drawable/textselecthandle"
                android:textSelectHandleLeft="@drawable/textselecthandle"
                android:textSelectHandleRight="@drawable/textselecthandle"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/zhh_hq_yzm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="5dp"
            android:gravity="center"

            android:text="获取动态码"
            android:textColor="@color/color_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_red"/>

    <Button
        android:id="@+id/zhh_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_shape"
        android:text="重置"
        android:textColor="@color/color_white"
        android:textSize="16.0sp"/>
</LinearLayout>
