<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <com.androidkun.xtablayout.XTabLayout
                    android:id="@+id/headline_tablayout"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:tabGravity="fill"
                    app:xTabIndicatorColor="@color/color_red"
                    app:xTabIndicatorHeight="3dp"
                    app:xTabIndicatorWidth="25dp"
                    app:xTabMode="scrollable"
                    app:xTabSelectedTextColor="@color/color_red"
                    app:xTabSelectedTextSize="18.0sp"
                    app:xTabTextColor="@color/color_title_main"
                    app:xTabTextSelectedBold="true"
                    app:xTabTextSize="16.0sp">
                </com.androidkun.xtablayout.XTabLayout>

                <ImageButton
                    android:id="@+id/fx_gd_imgbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:src="@drawable/btn_recommend"/>
            </LinearLayout>

            <View
                android:id="@+id/headline_divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/shape_shande"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/headline_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>