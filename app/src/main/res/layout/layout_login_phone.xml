<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout_login_phone"
    android:visibility="gone"
    android:orientation="vertical">
    <EditText
        android:textSize="14.0sp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="请填写手机号码"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:inputType="number"
        android:maxLength="11"
        android:drawableRight="@drawable/icon_username"
        android:textSelectHandle="@drawable/textselecthandle"
        android:textSelectHandleLeft="@drawable/textselecthandle"
        android:textSelectHandleRight="@drawable/textselecthandle"
        android:textCursorDrawable="@drawable/text_cursor_shape"
        android:background="@drawable/corner_titlebar"
        android:id="@+id/dl_tel2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <EditText
            android:textSize="14.0sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请填写验证码"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:drawableRight="@drawable/icon_text"
            android:textSelectHandle="@drawable/textselecthandle"
            android:textSelectHandleLeft="@drawable/textselecthandle"
            android:textSelectHandleRight="@drawable/textselecthandle"
            android:textCursorDrawable="@drawable/text_cursor_shape"
            android:background="@drawable/corner_titlebar"
            android:id="@+id/dl_verification1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bg_verification_code"
            android:id="@+id/login_phone_send1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <EditText
            android:textSize="14.0sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请填写动态码"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:drawableRight="@drawable/icon_phone"
            android:textSelectHandle="@drawable/textselecthandle"
            android:textSelectHandleLeft="@drawable/textselecthandle"
            android:textSelectHandleRight="@drawable/textselecthandle"
            android:textCursorDrawable="@drawable/text_cursor_shape"
            android:background="@drawable/corner_titlebar"
            android:id="@+id/dl_verification2"/>
        <Button
            android:id="@+id/zhc_hq_yzm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_xq_yzm"
            android:text="获取动态码"
            android:textColor="@color/color_white" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="登录"
        android:textColor="@color/color_white"
        android:textSize="16.0sp"
        android:id="@+id/dl_ok2"
        android:background="@drawable/btn_xq_chujian"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"/>
</LinearLayout>