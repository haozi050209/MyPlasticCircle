<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fx_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fx_tt_title_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:padding="10dp"
            android:textColor="@color/color_title_main"
            android:textSize="16.0sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/fx_tt_title_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/color_content"
                android:textSize="14.0sp"/>

            <ImageView
                android:id="@+id/fx_tt_img_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0.6dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_time1"/>

            <TextView
                android:id="@+id/fx_tt_title_shj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:textColor="@color/color_content"
                android:textSize="14.0sp"/>

            <ImageView
                android:id="@+id/fx_tt_img_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0.5dp"
                android:src="@drawable/icon_see1"/>

            <TextView
                android:id="@+id/fx_tt_title_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:maxLines="1"
                android:textColor="@color/color_red"
                android:textSize="14.0sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_gray3"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/headline_img_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_free"
        android:visibility="gone"/>
</FrameLayout>
