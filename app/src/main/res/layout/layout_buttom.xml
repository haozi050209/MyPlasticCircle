<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_buttom"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="#f6f6f6"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_lightgray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/buttom_linear_fx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buttom_img_fx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tabbar_headlines"/>

            <TextView
                android:id="@+id/buttom_text_fx"
                style="@style/layout_buttoom_text"
                android:text="头条"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttom_linear_txl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buttom_img_txl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tabbar_contacts"/>

            <TextView
                android:id="@+id/buttom_text_txl"
                style="@style/layout_buttoom_text"
                android:text="通讯录"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttom_linear_jia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:transitionName="sharedView1">

            <ImageView
                android:id="@+id/buttom_img_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tabbar_btn_release"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttom_linear_gq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buttom_img_gq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tabbar_trade"/>

            <TextView
                android:id="@+id/buttom_text_gq"
                style="@style/layout_buttoom_text"
                android:text="供求"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/buttom_linear_wd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buttom_img_wd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tabbar_me"/>

            <TextView
                android:id="@+id/buttom_text_wd"
                style="@style/layout_buttoom_text"
                android:text="我的"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
