<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:id="@+id/layout_buttom">
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_lightgray"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/buttom_linear_fx"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttom_img_fx"
                android:src="@drawable/tabbar_headlines"/>
            <TextView
                style="@style/layout_buttoom_text"
                android:id="@+id/buttom_text_fx"
                android:text="头条"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/buttom_linear_txl"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttom_img_txl"
                android:src="@drawable/tabbar_contacts"/>
            <TextView
                style="@style/layout_buttoom_text"
                android:id="@+id/buttom_text_txl"
                android:text="通讯录"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttom_linear_jia"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tabbar_btn_release"
                android:id="@+id/buttom_img_jia"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/buttom_linear_gq"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttom_img_gq"
                android:src="@drawable/tabbar_trade"/>
            <TextView
                style="@style/layout_buttoom_text"
                android:id="@+id/buttom_text_gq"
                android:text="供求"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/buttom_linear_wd"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttom_img_wd"
                android:src="@drawable/tabbar_me"/>
            <TextView
                style="@style/layout_buttoom_text"
                android:id="@+id/buttom_text_wd"
                android:text="我的"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
