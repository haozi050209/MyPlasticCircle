<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <include layout="@layout/layout_tx"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.0sp"
                android:id="@+id/txl_listview_gs"
                android:text=" 深圳千色薄膜有限公司"
                android:drawableLeft="@drawable/icon_company"
                android:textColor="#1b2126"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_name"
                    android:textSize="12.0sp"
                    android:id="@+id/txl_listview_mz"
                    android:text=" 二哥"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_name"
                    android:id="@+id/txl_listview_dh"
                    android:text=" 1537841****"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txl_listview_gj"
                    android:textSize="12.0sp"
                    android:text="发布供给：173条"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/txl_listview_qg"
                    android:textSize="12.0sp"
                    android:text="发布求购：56条"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
