<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/head_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp">

        <com.myplas.q.common.view.MyImageView
            android:id="@+id/xq_tx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/contact_image_defaul_male"
            android:transitionName="shareView1"/>

        <ImageView
            android:id="@+id/contact_sign_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/xq_rz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/icon_identity"/>
    </FrameLayout>
</RelativeLayout>
